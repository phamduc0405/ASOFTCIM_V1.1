<UserControl
    x:Class="ASOFTCIM.MVVM.View.FDC.FDCView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.View.FDC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border Background="Transparent" CornerRadius="5">

            <Grid ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Margin="10,5,10,5"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="0.5"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            ShadowDepth="2"
                            Color="Black" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.ColumnSpan="2"
                                Margin="2"
                                VerticalAlignment="Center"
                                Background="Blue"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="5"
                                        ShadowDepth="2"
                                        Color="Black" />
                                </Border.Effect>
                                <Border
                                    Margin="0,2,0,2"
                                    VerticalAlignment="Center"
                                    Background="White"
                                    CornerRadius="5">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        FontSize="25"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="FDCParameter" />
                                </Border>

                            </Border>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid x:Name="mainGrid1" ShowGridLines="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="5*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />


                                    </Grid.RowDefinitions>
                                    <Grid
                                        Grid.Row="1"
                                        Grid.RowSpan="27"
                                        Grid.Column="3"
                                        Margin="1"
                                        Background="LightGray" />
                                    <!--  ROW 0  -->
                                    <Grid Grid.Column="0">
                                        <Border Background="#424349">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="No." />
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Border Background="#424349">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="SVID" />
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <Border Background="#424349">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="SV NAME" />
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="3">
                                        <Border Background="#424349">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="VALUE" />
                                        </Border>
                                    </Grid>

                                </Grid>
                                <Grid Grid.Column="1" Background="#eff2f7" />
                                <Grid
                                    x:Name="mainGrid2"
                                    Grid.Column="2"
                                    Margin="0,0,0,0"
                                    ShowGridLines="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="5*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />


                                    </Grid.RowDefinitions>
                                    <Grid
                                        Grid.Row="1"
                                        Grid.RowSpan="27"
                                        Grid.Column="3"
                                        Margin="1"
                                        Background="LightGray" />
                                    <!--  ROW 0  -->
                                    <Grid Grid.Column="0">
                                        <Border Background="#424349">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="No." />
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Border Background="#424349">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="SVID" />
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <Border Background="#424349">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="SV NAME" />
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="3">
                                        <Border Background="#424349">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="VALUE" />
                                        </Border>
                                    </Grid>

                                </Grid>
                            </Grid>

                        </Grid>

                    </Grid>
                </Border>
            </Grid>

        </Border>
    </Grid>
</UserControl>
