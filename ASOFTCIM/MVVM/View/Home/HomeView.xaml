<UserControl
    x:Class="ASOFTCIM.MVVM.View.Home.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.View.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ASOFTCIM.MVVM.ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Tạo style cho ListView  -->
        <Style x:Key="CustomListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="LightGreen" />
            <Setter Property="BorderBrush" Value="DarkGreen" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="8" />
        </Style>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="White" />
            <!--  Màu nền  -->
            <Setter Property="Foreground" Value="#FF2D2D30" />
            <!--  Màu chữ  -->
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <!--  Tạo style cho ListViewItem  -->
        <Style x:Key="CustomListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="LightYellow" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightSkyBlue" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DarkHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF333333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />

            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="BorderBrush" Value="Gray" />
        </Style>

        <Style x:Key="ValueCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFE0E0E0" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:HomeViewModel />
    </UserControl.DataContext>
    <Grid>
        <Border Background="Transparent" CornerRadius="5">

            <Grid ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                Margin="10,5,5,5"
                Background="White"
                BorderBrush="Black"
                BorderThickness="0.5"
                CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                        BlurRadius="5"
                        ShadowDepth="2"
                        Color="Black" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                            Grid.ColumnSpan="2"
                            Margin="2"
                            VerticalAlignment="Center"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect
                                    BlurRadius="5"
                                    ShadowDepth="2"
                                    Color="Black" />
                                </Border.Effect>
                                <Border
                                Margin="0,2,0,2"
                                VerticalAlignment="Center"
                                Background="White"
                                CornerRadius="5">
                                    <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    FontSize="25"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="ALARM" />
                                </Border>

                            </Border>
                            <DataGrid
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="5,0,5,5"
                            AutoGenerateColumns="False"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CanUserAddRows="False"
                            ColumnHeaderStyle="{StaticResource DarkHeaderStyle}"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            HorizontalGridLinesBrush="#FFCCCCCC"
                            IsReadOnly="True"
                            ItemsSource="{Binding Home.AlarmList}"
                            SelectionUnit="Cell"
                            VerticalGridLinesBrush="#FFCCCCCC">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                    Width="150"
                                    Binding="{Binding TIME}"
                                    Header="TIME" />
                                    <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding EQPID}"
                                    Header="EQPID" />
                                    <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding ALTEXT}"
                                    CellStyle="{StaticResource ValueCellStyle}"
                                    Header="ALTEXT" />
                                    <DataGridTextColumn
                                    Width="SizeToHeader"
                                    Binding="{Binding ALST}"
                                    Header="ALST" />
                                    <DataGridTextColumn
                                    Width="SizeToHeader"
                                    Binding="{Binding ALID}"
                                    Header="ALID" />
                                    <DataGridTextColumn
                                    Width="SizeToHeader"
                                    Binding="{Binding ALCD}"
                                    Header="ALCD" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                            Grid.ColumnSpan="2"
                            Margin="3"
                            VerticalAlignment="Center"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect
                                    BlurRadius="5"
                                    ShadowDepth="2"
                                    Color="Black" />
                                </Border.Effect>
                                <Border
                                Margin="0,2,0,2"
                                VerticalAlignment="Center"
                                Background="White">
                                    <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    FontSize="25"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="MESSAGE" />
                                </Border>
                            </Border>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="2,0,0,2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Border>
                                            <Border.Effect>
                                                <DropShadowEffect
                                                BlurRadius="5"
                                                ShadowDepth="2"
                                                Color="Black" />
                                            </Border.Effect>
                                            <Border Background="#FF333333">
                                                <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                FontSize="20"
                                                Foreground="White"
                                                Text="CIM - HOST" />
                                            </Border>
                                        </Border>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="6*" />
                                            <ColumnDefinition Width="60" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="6*" />
                                            <RowDefinition Height="40" />
                                        </Grid.RowDefinitions>
                                        <Border
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        BorderBrush="Black"
                                        BorderThickness="1">
                                            <RichTextBox x:Name="txtCimHost">
                                                <FlowDocument>
                                                    <Paragraph>
                                                        <Run Text="{Binding Home.MessageCIM2HOST}" />
                                                    </Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>

                                        </Border>
                                        <Button
                                        x:Name="btnClearMessageCim2Host"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="3"
                                        Command="{Binding ClearMessageCim2Host}"
                                        Content="Clear"
                                        Style="{StaticResource ButtonTransparent}" />
                                    </Grid>

                                </Grid>
                                <Grid Grid.Column="1" Background="White" />
                                <Grid
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="0,0,2,2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Border Grid.ColumnSpan="2" Margin="0,0,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect
                                            BlurRadius="5"
                                            ShadowDepth="2"
                                            Color="Black" />
                                        </Border.Effect>
                                        <Border Background="#FF333333">
                                            <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Foreground="White"
                                            FontSize="20"
                                            Text="CIM - EQP" />
                                        </Border>

                                    </Border>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="6*" />
                                            <ColumnDefinition Width="60" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="6*" />
                                            <RowDefinition Height="40" />
                                        </Grid.RowDefinitions>
                                        <Border
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        BorderBrush="Black"
                                        BorderThickness="1">
                                            <RichTextBox>
                                                <FlowDocument>
                                                    <Paragraph>
                                                        <Run Text="{Binding Home.MessageCIM2EQP}" />
                                                    </Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>
                                        </Border>
                                        <Button
                                        x:Name="btnClearMessageCim2EQP"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="3"
                                        Command="{Binding ClearMessageCim2Eqp}"
                                        Content="Clear"
                                        Style="{StaticResource ButtonTransparent}" />
                                    </Grid>
                                </Grid>
                            </Grid>

                        </Grid>

                    </Grid>
                </Border>
                <Border
                Grid.Column="1"
                Margin="1,5,10,5"
                Background="White"
                BorderBrush="Black"
                BorderThickness="0.5"
                CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                        BlurRadius="5"
                        ShadowDepth="2"
                        Color="Black" />
                    </Border.Effect>
                    <ScrollViewer Margin="0,5,0,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border
                            Grid.Column="1"
                            Margin="5,5"
                            Background="#FFD9E4FF"
                            BorderBrush="{StaticResource gradientLayout5}"
                            BorderThickness="1.5"
                            CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*" />
                                        <ColumnDefinition Width="180" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                    Grid.ColumnSpan="2"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Background="CornflowerBlue"
                                    CornerRadius="5">
                                        <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="EQUIPMENT" />
                                    </Border>
                                    <!--  header  -->
                                    <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="EQP ID" />
                                    <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="EQP NAME " />

                                    <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="PPID " />

                                    <TextBlock
                                    Grid.Row="7"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="CONNECTSTATE " />
                                    <!--  commend  -->
                                    <TextBlock
                                    x:Name="txtEQPID"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="{Binding Home.EQPID}" />
                                    <TextBlock
                                    x:Name="txtEQPName"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="{Binding Home.EQPNAME}" />
                                    <TextBlock
                                    x:Name="txtRecipy"
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="{Binding Home.PPID}" />
                                    <TextBlock
                                    x:Name="txtPlcConnect"
                                    Grid.Row="7"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="{Binding Home.PLCConnect}">
                                        <TextBlock.Style>
                                            <Style BasedOn="{StaticResource HeaderTextBlockStyle}" TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black" />
                                                <!--  Mặc định màu đen  -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Home.PLCConnect}" Value=":   Plc Connected">
                                                        <Setter Property="Foreground" Value="Green" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Home.PLCConnect}" Value=":   Plc Disconnected">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                </Grid>
                            </Border>
                            <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5,5"
                            Background="#FFD9E4FF"
                            BorderBrush="{StaticResource gradientLayout5}"
                            BorderThickness="1.5"
                            CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="180" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                    Grid.ColumnSpan="2"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Background="CornflowerBlue"
                                    CornerRadius="5">
                                        <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="HOST" />
                                    </Border>

                                    <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="IP " />
                                    <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="PORT  " />
                                    <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="MODE  " />
                                    <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="CONNECTSTATE" />
                                    <!--  commend  -->
                                    <TextBlock
                                    x:Name="txtIp"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="{Binding Home.IP}" />
                                    <TextBlock
                                    x:Name="txtPort"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="{Binding Home.PORT}" />
                                    <TextBlock
                                    x:Name="txtState"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="{Binding Home.STATE}" />
                                    <TextBlock
                                    x:Name="txtCimConnect"
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="{Binding Home.CimConnect}">
                                        <TextBlock.Style>
                                            <Style BasedOn="{StaticResource HeaderTextBlockStyle}" TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black" />
                                                <!--  Mặc định màu đen  -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Home.CimConnect}" Value=":   CimConnect">
                                                        <Setter Property="Foreground" Value="Green" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Home.CimConnect}" Value=":   CimDisConnect">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>



                                </Grid>
                            </Border>
                            <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5,5"
                            Background="#FFD9E4FF"
                            BorderBrush="{StaticResource gradientLayout5}"
                            BorderThickness="1.5"
                            CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="180" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                    Grid.ColumnSpan="2"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Background="CornflowerBlue"
                                    CornerRadius="5">
                                        <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="EQP STATE" />
                                    </Border>

                                    <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="AVAILABILITYSTATE" />
                                    <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="INTERLOCKSTATE" />
                                    <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="RUNSTATE" />
                                    <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="FRONSTATE" />
                                    <TextBlock
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="REARSTATE" />
                                    <TextBlock
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="MOVESTATE" />
                                    <!--  commend  -->
                                    <TextBlock
                                    x:Name="txtAvailabilityState"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="{Binding Home.AVAILABILITYSTATE}">
                                        <TextBlock.Style>
                                            <Style BasedOn="{StaticResource HeaderTextBlockStyle}" TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black" />
                                                <!--  Mặc định màu đen  -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Home.AVAILABILITYSTATE}" Value="UP">
                                                        <Setter Property="Foreground" Value="Green" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Home.AVAILABILITYSTATE}" Value="DOWN">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock
                                    x:Name="txtInterLockState"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="{Binding Home.INTERLOCKSTATE}">
                                        <TextBlock.Style>
                                            <Style BasedOn="{StaticResource HeaderTextBlockStyle}" TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black" />
                                                <!--  Mặc định màu đen  -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Home.INTERLOCKSTATE}" Value="OFF">
                                                        <Setter Property="Foreground" Value="Green" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Home.INTERLOCKSTATE}" Value="ON">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock
                                    x:Name="txtRunState"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="{Binding Home.RUNSTATE}">
                                        <TextBlock.Style>
                                            <Style BasedOn="{StaticResource HeaderTextBlockStyle}" TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black" />
                                                <!--  Mặc định màu đen  -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Home.RUNSTATE}" Value="RUN">
                                                        <Setter Property="Foreground" Value="Green" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Home.RUNSTATE}" Value="IDLE">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock
                                    x:Name="txtFronState"
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="{Binding Home.FRONTSTATE}">
                                        <TextBlock.Style>
                                            <Style BasedOn="{StaticResource HeaderTextBlockStyle}" TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black" />
                                                <!--  Mặc định màu đen  -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Home.FRONTSTATE}" Value="UP">
                                                        <Setter Property="Foreground" Value="Green" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Home.FRONTSTATE}" Value="DOWN">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock
                                    x:Name="txtRearState"
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="{Binding Home.REARSTATE}">
                                        <TextBlock.Style>
                                            <Style BasedOn="{StaticResource HeaderTextBlockStyle}" TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black" />
                                                <!--  Mặc định màu đen  -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Home.REARSTATE}" Value="UP">
                                                        <Setter Property="Foreground" Value="Green" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Home.REARSTATE}" Value="DOWN">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock
                                    x:Name="txtMoveState"
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    Margin="10,5,0,5"
                                    FontSize="15"
                                    Text="{Binding Home.MOVESTATE}">
                                        <TextBlock.Style>
                                            <Style BasedOn="{StaticResource HeaderTextBlockStyle}" TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black" />
                                                <!--  Mặc định màu đen  -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Home.MOVESTATE}" Value="RUNNING">
                                                        <Setter Property="Foreground" Value="Green" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Home.MOVESTATE}" Value="PAUSE">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                </Grid>
                            </Border>
                            <Border Grid.Row="3" Margin="3,3,3,2">
                                <Grid
                                x:Name="grdCpu"
                                Grid.Column="0"
                                Height="150">
                                    <ContentPresenter Content="{Binding CpuChart}" />
                                </Grid>


                            </Border>
                        </Grid>
                    </ScrollViewer>

                </Border>

            </Grid>

        </Border>
    </Grid>
</UserControl>
