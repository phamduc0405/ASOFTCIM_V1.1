<UserControl
    x:Class="ASOFTCIM.MVVM.View.Home.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.View.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border Background="Transparent" CornerRadius="5">

            <Grid ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Margin="10,5,5,5"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="0.5"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            ShadowDepth="2"
                            Color="Black" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.ColumnSpan="2"
                                Margin="2"
                                VerticalAlignment="Center"
                                Background="Blue"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="5"
                                        ShadowDepth="2"
                                        Color="Black" />
                                </Border.Effect>
                                <Border
                                    Margin="0,2,0,2"
                                    VerticalAlignment="Center"
                                    Background="White"
                                    CornerRadius="5">
                                    <TextBlock
                                        FontSize="25"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="ALARM" />
                                </Border>

                            </Border>
                            <!--<ListView
                                x:Name="listView"
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                                <ListView.View>
                                    <GridView x:Name="grdView" />
                                </ListView.View>
                            </ListView>-->
                            <DataGrid
                                x:Name="dtgrtView"
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                AutoGenerateColumns="True"
                                ItemsSource="{Binding Data}" />

                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.ColumnSpan="2"
                                Margin="3"
                                VerticalAlignment="Center"
                                Background="Blue"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="5"
                                        ShadowDepth="2"
                                        Color="Black" />
                                </Border.Effect>
                                <Border
                                    Margin="0,2,0,2"
                                    VerticalAlignment="Center"
                                    Background="White">
                                    <TextBlock
                                        FontSize="25"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="MESSAGE" />
                                </Border>
                            </Border>
                            <ListView
                                x:Name="listViewMesage"
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                                <ListView.View>
                                    <GridView x:Name="grdViewMasage" />
                                </ListView.View>
                            </ListView>


                        </Grid>

                    </Grid>
                </Border>
                <Border
                    Grid.Column="1"
                    Margin="1,5,10,5"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="0.5"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            ShadowDepth="2"
                            Color="Black" />
                    </Border.Effect>
                    <ScrollViewer Margin="0,5,0,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.Column="1"
                                Margin="5,5"
                                Background="#FFD9E4FF"
                                BorderBrush="{StaticResource gradientLayout5}"
                                BorderThickness="1.5"
                                CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.ColumnSpan="2"
                                        Margin="3"
                                        VerticalAlignment="Center"
                                        Background="CornflowerBlue"
                                        CornerRadius="5">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="EQUIPMENT" />
                                    </Border>
                                    <!--  header  -->
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="EQP ID:" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="EQP NAME :" />
                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="ID ADDRESS :" />
                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="RECIPY :" />
                                    <TextBlock
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="PORT NO :" />
                                    <TextBlock
                                        Grid.Row="6"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="IQC MODE :" />
                                    <!--  commend  -->
                                    <TextBlock
                                        x:Name="txtEQPID"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text="EQP ID:" />
                                    <TextBlock
                                        x:Name="txtEQPName"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text="EQP NAME :" />
                                    <TextBlock
                                        x:Name="txtIDAddress"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text="ID ADDRESS :" />
                                    <TextBlock
                                        x:Name="txtRecipy"
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text="RECIPY :" />
                                    <TextBlock
                                        x:Name="txtPortNo"
                                        Grid.Row="5"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text="PORT NO :" />
                                    <TextBlock
                                        x:Name="txtIQCMode"
                                        Grid.Row="6"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text="IQC MODE :" />
                                </Grid>
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5,5"
                                Background="#FFD9E4FF"
                                BorderBrush="{StaticResource gradientLayout5}"
                                BorderThickness="1.5"
                                CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.ColumnSpan="2"
                                        Margin="3"
                                        VerticalAlignment="Center"
                                        Background="CornflowerBlue"
                                        CornerRadius="5">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="HOST" />
                                    </Border>

                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="IP " />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="PORT  " />
                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="MODE  " />
                                    <!--  commend  -->
                                    <TextBlock
                                        x:Name="txtIp"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text="Ip" />
                                    <TextBlock
                                        x:Name="txtPort"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text=": Port" />
                                    <TextBlock
                                        x:Name="txtState"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text=": State" />
                                </Grid>
                            </Border>
                            <Border
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5,5"
                                Background="#FFD9E4FF"
                                BorderBrush="{StaticResource gradientLayout5}"
                                BorderThickness="1.5"
                                CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.ColumnSpan="2"
                                        Margin="3"
                                        VerticalAlignment="Center"
                                        Background="CornflowerBlue"
                                        CornerRadius="5">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="EQP STATE" />
                                    </Border>

                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="AVAILABILITYSTATE :" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="INTERLOCKSTATE :" />
                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="RUNSTATE :" />
                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="FRONSTATE :" />
                                    <TextBlock
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="REARSTATE :" />
                                    <TextBlock
                                        Grid.Row="6"
                                        Grid.Column="0"
                                        Margin="10,5,0,5"
                                        FontSize="15"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="MOVESTATE :" />
                                    <!--  commend  -->
                                    <TextBlock
                                        x:Name="txtAvailabilityState"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text="Ip" />
                                    <TextBlock
                                        x:Name="txtInterLockState"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text=": Port" />
                                    <TextBlock
                                        x:Name="txtRunState"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text=": State" />
                                    <TextBlock
                                        x:Name="txtFronState"
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text=": State" />
                                    <TextBlock
                                        x:Name="txtRearState"
                                        Grid.Row="5"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text=": State" />
                                    <TextBlock
                                        x:Name="txtMoveState"
                                        Grid.Row="6"
                                        Grid.Column="1"
                                        Margin="10,5,0,5"
                                        Text=": State" />

                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>

                </Border>

            </Grid>

        </Border>
    </Grid>
</UserControl>
