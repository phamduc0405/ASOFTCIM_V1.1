<Window
    x:Class="ASOFTCIM.MVVM.View.Popup.LogInDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.View.Popup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LogInDisplay"
    Width="600"
    Height="350"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Border
            Margin="10"
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="10">
            <Border.Background>
                <!--<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="#FFE3F2FD"/>

                    <GradientStop Offset="0.5" Color="#FFBBDEFB"/>

                    <GradientStop Offset="1" Color="#FF90CAF9"/>


                </LinearGradientBrush>-->
                <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                    <GradientStop Offset="0" Color="#FFE3F2FD" />
                    <!--  Gần trắng ở giữa  -->
                    <GradientStop Offset="1" Color="#FFBBDEFB" />
                    <GradientStop Offset="1" Color="#FF90CAF9" />
                    <!--  Xanh nhạt  -->
                    <GradientStop Offset="0.5" Color="#FF90CAF9" />
                    <!--  Xanh dương chuẩn  -->
                </RadialGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    ShadowDepth="2"
                    Color="Black" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">

                    <TextBlock
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        Foreground="Black"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="" />
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Grid.RowSpan="10"
                        Grid.ColumnSpan="10"
                        Width="300"
                        Height="300"
                        Margin="0,0,0,50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Ellipse.Fill>
                            <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                <GradientStop Offset="0" Color="#40FFFFFF" />

                                <GradientStop Offset="1" Color="#00FFFFFF" />
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock
                        Grid.RowSpan="10"
                        Grid.ColumnSpan="10"
                        Margin="0,0,0,50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="300"
                        FontWeight="Bold"
                        Foreground="#FFE3F2FD"
                        Text="AS">
                        <TextBlock.OpacityMask>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Offset="0.0" Color="Transparent" />
                                <GradientStop Offset="0.5" Color="Black" />
                                <GradientStop Offset="1.0" Color="Transparent" />
                            </LinearGradientBrush>
                        </TextBlock.OpacityMask>
                    </TextBlock>
                    <Grid
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <fa:IconImage
                            x:Name="icLogIn"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"
                            Icon="UserCircle" />
                    </Grid>
                    <Grid
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <Border
                            Margin="10"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                    Margin="10,0,0,0"
                                    fa:Awesome.Spin="False"
                                    Icon="User" />
                                <Grid
                                    Width="1"
                                    Margin="7,0,0,0"
                                    Background="Gray" />
                                <ComboBox
                                    x:Name="cbb"
                                    Width="210"
                                    Margin="0,0,0,0"
                                    BorderBrush="Transparent"
                                    Style="{StaticResource ComboBoxFlatStyle}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid
                        Grid.Row="3"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <Border
                            Margin="10"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                    Height="25"
                                    Margin="10,0,0,0"
                                    fa:Awesome.Spin="False"
                                    Icon="Key" />
                                <Grid
                                    Width="1"
                                    Margin="15,0,0,0"
                                    Background="Gray" />
                                <TextBox
                                    x:Name="txtPass"
                                    Width="213"
                                    Height="38"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Bottom"
                                    HorizontalContentAlignment="Center"
                                    Style="{StaticResource TextBoxHintStyleNoBorder}"
                                    Tag="Password" />
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid
                        Grid.Row="4"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <Button
                            x:Name="btnLogIn"
                            Margin="30,10,33,10"
                            Click="btnLogIn_Click"
                            Content="LogIn"
                            Style="{StaticResource ButtonTransparent}" />
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>