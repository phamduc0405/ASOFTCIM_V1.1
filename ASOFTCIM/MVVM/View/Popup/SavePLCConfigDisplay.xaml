<Window
    x:Class="ASOFTCIM.MVVM.View.Popup.SavePLCConfigDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.View.Popup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SavePLCConfigDisplay"
    Width="450"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Background="AliceBlue"
        BorderBrush="LightSlateGray"
        BorderThickness="2"
        CornerRadius="10">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="20*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border
                    x:Name="bdHeader"
                    Background="LightSlateGray"
                    CornerRadius="5" />
                <TextBlock
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    Foreground="Snow"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="SAVE PLC DATA" />
            </Grid>
            <Grid Grid.Row="1">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <StackPanel
                            x:Name="stkMain"
                            Margin="5"
                            Orientation="Vertical" />
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button
                                x:Name="btnSavePlcConfig"
                                Width="150"
                                Height="50"
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource ButtonSave}">
                                <StackPanel Width="150" Orientation="Horizontal">
                                    <fa:IconImage
                                        x:Name="LoadingPlcImage"
                                        Width="25"
                                        Margin="20,0,0,0"
                                        HorizontalAlignment="Left"
                                        fa:Awesome.Spin="true"
                                        Icon="Spinner"
                                        Visibility="Hidden" />
                                    <TextBlock
                                        Margin="40,5,5,5"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="SAVE" />

                                </StackPanel>
                            </Button>
                            <Button
                                x:Name="btnCancel"
                                Width="150"
                                Height="50"
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource ButtonSave}">

                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="CANCEL" />
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Grid>
    </Border>
</Window>
