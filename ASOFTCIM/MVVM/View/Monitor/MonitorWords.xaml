<UserControl
    x:Class="ASOFTCIM.MVVM.View.Monitor.MonitorWords"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.View.Monitor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <DockPanel LastChildFill="True">
                    <Border
                        Height="30"
                        Margin="5"
                        Background="CornflowerBlue"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5"
                        DockPanel.Dock="Top">
                        <TextBlock
                            Height="30"
                            Margin="30,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            Text="PLC -&gt; PC" />
                    </Border>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <WrapPanel x:Name="wrpInput" Orientation="Vertical" />

                    </ScrollViewer>
                </DockPanel>

            </Grid>
            <Grid Grid.Column="1">
                <DockPanel LastChildFill="True">
                    <Border
                        Height="30"
                        Margin="5"
                        Background="CornflowerBlue"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5"
                        DockPanel.Dock="Top">
                        <TextBlock
                            Height="30"
                            Margin="30,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            Text="PC -&gt; PLC" />
                    </Border>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <WrapPanel x:Name="wrpOutput" Orientation="Vertical" />

                    </ScrollViewer>
                </DockPanel>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
