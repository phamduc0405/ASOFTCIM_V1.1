                    Background="IndianRed"
                    BorderBrush="Gray"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            ShadowDepth="2"
                            Color="Black" />
                    </Border.Effect>
                    <TextBlock
                        x:Name="txtPlcConnect"
                        Margin="5,0,5,0"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="PLC Disconnected" />
                </Border>
                <Border
                    x:Name="bdrCimConnect"
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Background="IndianRed"
                    BorderBrush="Gray"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            ShadowDepth="2"
                            Color="Black" />
                    </Border.Effect>
