<Window
    x:Class="ASOFTCIM.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:ASOFTCIM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1500"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    Topmost="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="none"
    mc:Ignorable="d">
    <Border
    Margin="5"
    Background="#eff2f7"
    CornerRadius="10">

        <!--  Grid Window  -->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0" />
            </Grid.RowDefinitions>
            <!--  ===============================================  -->
            <Grid Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="3" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Border
                        x:Name="grdTopMain"
                        Margin="0,0,0,0"
                        Background="AliceBlue"
                        CornerRadius="20,20,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Border
                                Grid.RowSpan="2"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Width="160"
                                Height="95"
                                Margin="-75,0,0,0"
                                Background="AntiqueWhite"
                                BorderBrush="Black"
                                BorderThickness="2"
                                CornerRadius="10">
                                    <Image Margin="0" Source="/Images/SamsungLogo.png" />
                                </Border>
                                <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Orientation="Horizontal" />
                                <Grid
                    Grid.RowSpan="1"
                    Grid.Column="2"
                    Margin="0,10,0,0">
                                    <Border
                        Margin="4"
                        Background="Transparent"
                        CornerRadius="5">
                                        <StackPanel>
                                            <TextBlock
                                x:Name="txtVersion"
                                Margin="10,0,0,0"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="Version" />
                                            <TextBlock
                                x:Name="tblDateTime"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="datetime" />
                                        </StackPanel>

                                    </Border>
                                </Grid>


                                <Grid Grid.Column="3">
                                    <Border
                                    Margin="4,10,4,4"
                                    Background="CornflowerBlue"
                                    CornerRadius="5">
                                        <Border.Effect>
                                            <DropShadowEffect
                                            BlurRadius="5"
                                            ShadowDepth="2"
                                            Color="Black" />
                                        </Border.Effect>
                                        <TextBlock
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        FontSize="40"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="CIM" />
                                    </Border>

                                </Grid>


                                <Grid Grid.Column="4" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="120" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                    x:Name="btnLogIn"
                                    Grid.Column="1"
                                    Width="120"
                                    Height="30"
                                    Margin="50,2,0,40"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource ButtonSave}">
                                        <StackPanel Orientation="Horizontal">
                                            <fa:IconImage
                                            x:Name="icLogIn"
                                            Margin="0,5,0,5"
                                            HorizontalAlignment="Left"
                                            Icon="ArrowRightFromBracket" />
                                            <TextBlock
                                            x:Name="txtLogIn"
                                            Margin="10,0,5,0"
                                            HorizontalAlignment="Center"
                                            FontSize="15"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="LogIn" />
                                        </StackPanel>
                                    </Button>
                                    <StackPanel
                                    Grid.Column="2"
                                    Margin="0,0,0,37"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal" Width="107">
                                        <Button
                                        x:Name="btnHideMenu"
                                        Grid.Column="1"
                                        Height="20"
                                        Margin="0,0,10,0"
                                        Cursor="Hand"
                                        Style="{StaticResource ButtonTransparent}"
                                        Tag="Minus" />

                                        <Button
                                        x:Name="btnResize"
                                        Grid.Column="1"
                                        Height="20"
                                        Margin="0,0,10,0"
                                        Cursor="Hand"
                                        Style="{StaticResource ButtonTransparent}"
                                        Tag="Square" />

                                        <Button
                                        x:Name="btnClose"
                                        Height="20"
                                        Margin="0,0,3,0"
                                        VerticalAlignment="Center"
                                        Cursor="Hand"
                                        Style="{StaticResource ButtonTransparent}"
                                        Tag="Xmark" />
                                    </StackPanel>
                                </Grid>

                                <Grid
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>




                                    <!--<Border
                            Grid.Column="1"
                            Height="26"
                            Background="#DDE9F7"
                            CornerRadius="3">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock
                                    Height="40"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="  CURRENT STATE: " />
                                <TextBlock
                                    x:Name="txtState"
                                    Height="40"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Style="{StaticResource HeaderTextBlockStyle}"
                                    Text="AMS642DF01" />
                            </StackPanel>

                        </Border>-->
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Border BorderBrush="#FF7FA6EF" BorderThickness="3" />
                    </Grid>
                </Grid>
            </Grid>

            <!--  =========================================  -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid Background="AliceBlue">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="70" />
                    </Grid.RowDefinitions>
                    <Border
                    Grid.Row="1"
                    Margin="10,2,10,5"
                    Background="White"
                    BorderBrush="Blue"
                    BorderThickness="1"
                    CornerRadius="5">
                        <Border.Effect>
                            <DropShadowEffect
                            BlurRadius="5"
                            ShadowDepth="2"
                            Color="Gray" />
                        </Border.Effect>
                        <Grid>
                            <Grid x:Name="grdPanel">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Grid for Menu Toggle Button  -->
                                <Border
                                Margin="1"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5" />
                                <Border
                                Grid.Column="1"
                                Margin="1"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5" />
                                <Border
                                Grid.Column="2"
                                Margin="1"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5" />
                                <Border
                                Grid.Column="3"
                                Margin="1"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5" />
                                <Border
                                Grid.Column="4"
                                Margin="1"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5" />
                                <Border
                                Grid.Column="5"
                                Margin="1"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5" />
                                <Border
                                Grid.Column="6"
                                Margin="1"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5" />
                                <Border
                                Grid.Column="7"
                                Margin="1"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5" />
                                <RadioButton
                                x:Name="btnHome"
                                Grid.Column="0"
                                Margin="2,2,2,2"
                                Command="{Binding T5ViewCommand}"
                                CommandParameter="T5s"
                                Content="Home"
                                FontSize="25"
                                GroupName="btnPanel"
                                Style="{StaticResource controlButtonPanel}"
                                Tag="Home">
                                    <RadioButton.ToolTip>
                                        <ToolTip
                                        x:Name="ttT5s"
                                        Content="Home"
                                        Style="{StaticResource tt_style}" />
                                    </RadioButton.ToolTip>

                                </RadioButton>
                                <!--  SVID  -->
                                <RadioButton
                                x:Name="btnSvid"
                                Grid.Column="1"
                                Margin="2,2,2,2"
                                Content="SVID"
                                FontSize="25"
                                GroupName="btnPanel"
                                Style="{StaticResource controlButtonPanel}"
                                Tag="list">
                                    <RadioButton.ToolTip>
                                        <ToolTip Content="SVID" Style="{StaticResource tt_style}" />
                                    </RadioButton.ToolTip>
                                </RadioButton>
                                <!--  ECM  -->
                                <RadioButton
                                x:Name="btnEcm"
                                Grid.Column="2"
                                Margin="2,2,2,2"
                                Content="ECM"
                                FontSize="25"
                                GroupName="btnPanel"
                                Style="{StaticResource controlButtonPanel}"
                                Tag="calendar">

                                    <RadioButton.ToolTip>
                                        <ToolTip Content="ECM" Style="{StaticResource tt_style}" />
                                    </RadioButton.ToolTip>
                                </RadioButton>
                                <!--  RECIPES  -->
                                <RadioButton
                                x:Name="btnRecipes"
                                Grid.Column="3"
                                Margin="2,2,2,2"
                                Content="RECIPES"
                                FontSize="25"
                                GroupName="btnPanel"
                                Style="{StaticResource controlButtonPanel}"
                                Tag="tachographdigital">

                                    <RadioButton.ToolTip>
                                        <ToolTip Content="RECIPES" Style="{StaticResource tt_style}" />
                                    </RadioButton.ToolTip>
                                </RadioButton>
                                <!--  ALARM  -->
                                <RadioButton
                                x:Name="btnAlarm"
                                Grid.Column="4"
                                Margin="2,2,2,2"
                                Content="ALARM"
                                FontSize="25"
                                GroupName="btnPanel"
                                Style="{StaticResource controlButtonPanel}"
                                Tag="clock">

                                    <RadioButton.ToolTip>
                                        <ToolTip Content="ALARM" Style="{StaticResource tt_style}" />
                                    </RadioButton.ToolTip>
                                </RadioButton>
                                <!--  MATERIAL  -->
                                <RadioButton
                                x:Name="btnMaterial"
                                Grid.Column="5"
                                Margin="2,2,2,2"
                                Content="MATERIAL"
                                FontSize="25"
                                GroupName="btnPanel"
                                Style="{StaticResource controlButtonPanel}"
                                Tag="Maxcdn">
                                    <RadioButton.ToolTip>
                                        <ToolTip Content="MATERIAL" Style="{StaticResource tt_style}" />
                                    </RadioButton.ToolTip>
                                </RadioButton>
                                <!--  Config  -->
                                <RadioButton
                                x:Name="btnConfig"
                                Grid.Column="6"
                                Margin="2,2,2,2"
                                Content="Config"
                                FontSize="25"
                                GroupName="btnPanel"
                                Style="{StaticResource controlButtonPanel}"
                                Tag="Gears">

                                    <RadioButton.ToolTip>
                                        <ToolTip
                                        x:Name="ttConfig"
                                        Content="Config"
                                        Style="{StaticResource tt_style}" />
                                    </RadioButton.ToolTip>
                                </RadioButton>

                                <RadioButton
                                x:Name="btnMonitor"
                                Grid.Column="7"
                                Margin="2,2,2,2"
                                Content="Monitor"
                                FontSize="25"
                                GroupName="btnPanel"
                                Style="{StaticResource controlButtonPanel}"
                                Tag="book">

                                    <RadioButton.ToolTip>
                                        <ToolTip
                                        x:Name="ttMonitor"
                                        Content="Monitor"
                                        Style="{StaticResource tt_style}" />
                                    </RadioButton.ToolTip>
                                </RadioButton>


                            </Grid>

                        </Grid>
                    </Border>

                    <Border Margin="0,0,0,10">
                        <Grid Background="AliceBlue">
                            <Grid.RowDefinitions />
                            <ContentControl
                            x:Name="maincontent"
                            Grid.RowSpan="3"
                            Content="{Binding Currentview}" />
                        </Grid>
                    </Border>


                    <!--  Navigation Panel  -->




                </Grid>

            </Grid>

            <!--  =========================================  -->
            <Grid Grid.Row="2" Background="AliceBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>
                <!--<Grid Grid.Row="0" Background="#FF7FA6EF" />-->

                <Grid Grid.Row="1" Margin="0,2,0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="200" />

                    </Grid.ColumnDefinitions>
                    
                    <!--<Border
                    x:Name="bdrPlcConnect"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"
