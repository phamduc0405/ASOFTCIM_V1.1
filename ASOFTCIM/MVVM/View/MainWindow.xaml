<Window
    x:Class="ASOFTCIM.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:ASOFTCIM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1500"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    Topmost="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="none"
    mc:Ignorable="d">
    <Border
        Margin="5"
        Background="#eff2f7"
        CornerRadius="10">

        <!--  Grid Window  -->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <!--  ===============================================  -->
            <Grid Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="3" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Border
                            x:Name="grdTopMain"
                            Margin="0,0,0,0"
                            Background="AliceBlue"
                            CornerRadius="20,20,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.5*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2">
                                    <Image
                                        Height="40"
                                        Margin="20,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Source="/Images/Asoft_Logo.png" />
                                </Grid>
                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Orientation="Horizontal" />


                                <Grid Grid.Column="1">
                                    <Border
                                        Margin="4"
                                        Background="Transparent"
                                        CornerRadius="5">
                                        <StackPanel>
                                            <TextBlock
                                                x:Name="txtVersion"
                                                Width="200"
                                                Height="30"
                                                Style="{StaticResource HeaderTextBlockStyle}"
                                                Text="Version" />
                                            <TextBlock
                                                x:Name="tblDateTime"
                                                Height="30"
                                                Margin="0,-2,0,0"
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource HeaderTextBlockStyle}"
                                                Text="datetime" />
                                        </StackPanel>

                                    </Border>
                                </Grid>
                                <Grid Grid.Column="2">
                                    <Border
                                        Margin="4,10,4,4"
                                        Background="CornflowerBlue"
                                        CornerRadius="5">
                                        <Border.Effect>
                                            <DropShadowEffect
                                                BlurRadius="5"
                                                ShadowDepth="2"
                                                Color="Black" />
                                        </Border.Effect>
                                        <TextBlock
                                            Height="40"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="ACIM" />
                                    </Border>

                                </Grid>


                                <Grid Grid.Column="3" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        x:Name="btnLogIn"
                                        Grid.Column="1"
                                        Width="150"
                                        Margin="10,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource ButtonSave}">
                                        <StackPanel Orientation="Horizontal">
                                            <fa:IconImage
                                                x:Name="icLogIn"
                                                Margin="0,5,0,5"
                                                HorizontalAlignment="Left"
                                                Icon="ArrowRightFromBracket" />
                                            <TextBlock
                                                x:Name="txtLogIn"
                                                Margin="10,0,5,0"
                                                HorizontalAlignment="Center"
                                                FontSize="20"
                                                Style="{StaticResource HeaderTextBlockStyle}"
                                                Text="LogIn" />
                                        </StackPanel>
                                    </Button>
                                    <StackPanel
                                        Grid.Column="2"
                                        Margin="0,0,15,0"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">
                                        <Button
                                            x:Name="btnHideMenu"
                                            Grid.Column="1"
                                            Height="30"
                                            Margin="0,0,10,0"
                                            Cursor="Hand"
                                            Style="{StaticResource ButtonTransparent}"
                                            Tag="Minus" />

                                        <Button
                                            x:Name="btnResize"
                                            Grid.Column="1"
                                            Height="30"
                                            Margin="0,0,10,0"
                                            Cursor="Hand"
                                            Style="{StaticResource ButtonTransparent}"
                                            Tag="Square" />

                                        <Button
                                            x:Name="btnClose"
                                            Height="30"
                                            Margin="0,0,3,0"
                                            VerticalAlignment="Center"
                                            Cursor="Hand"
                                            Style="{StaticResource ButtonTransparent}"
                                            Tag="Xmark" />
                                    </StackPanel>
                                </Grid>

                                <Grid
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>




                                    <!--<Border
                                Grid.Column="1"
                                Height="26"
                                Background="#DDE9F7"
                                CornerRadius="3">
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock
                                        Height="40"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="  CURRENT STATE: " />
                                    <TextBlock
                                        x:Name="txtState"
                                        Height="40"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="AMS642DF01" />
                                </StackPanel>

                            </Border>-->
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Border BorderBrush="#FF7FA6EF" BorderThickness="3" />
                    </Grid>
                </Grid>
            </Grid>

            <!--  =========================================  -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid Background="AliceBlue">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="55" />
                    </Grid.RowDefinitions>
                    <Border
                        Grid.Row="1"
                        Width="1500"
                        Margin="0,0,0,0"
                        VerticalAlignment="Top"
                        Panel.ZIndex="2"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="5"
                                ShadowDepth="2"
                                Color="Gray" />
                        </Border.Effect>
                        <Grid>
                            <Grid
                                x:Name="grdPanel"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Panel.ZIndex="2">

                                <StackPanel x:Name="st_pnl" Orientation="Horizontal">
                                    <!--  Grid for Menu Toggle Button  -->
                                    <RadioButton
                                        x:Name="btnHome"
                                        Margin="0,2,30,2"
                                        Command="{Binding T5ViewCommand}"
                                        CommandParameter="T5s"
                                        Content="Home"
                                        GroupName="btnPanel"
                                        Style="{StaticResource controlButtonPanel}"
                                        Tag="Home">

                                        <RadioButton.ToolTip>
                                            <ToolTip
                                                x:Name="ttT5s"
                                                Content="Home"
                                                Style="{StaticResource tt_style}" />
                                        </RadioButton.ToolTip>

                                    </RadioButton>
                                    <!--  SVID  -->
                                    <RadioButton
                                        x:Name="btnSvid"
                                        Margin="0,2,30,2"
                                        Content="SVID"
                                        GroupName="btnPanel"
                                        Style="{StaticResource controlButtonPanel}"
                                        Tag="list">

                                        <RadioButton.ToolTip>
                                            <ToolTip Content="SVID" Style="{StaticResource tt_style}" />
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    <!--  ECM  -->
                                    <RadioButton
                                        x:Name="btnEcm"
                                        Margin="0,2,30,2"
                                        Content="ECM"
                                        GroupName="btnPanel"
                                        Style="{StaticResource controlButtonPanel}"
                                        Tag="calendar">

                                        <RadioButton.ToolTip>
                                            <ToolTip Content="ECM" Style="{StaticResource tt_style}" />
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    <!--  RECIPES  -->
                                    <RadioButton
                                        x:Name="btnRecipes"
                                        Margin="0,2,30,2"
                                        Content="RECIPES"
                                        GroupName="btnPanel"
                                        Style="{StaticResource controlButtonPanel}"
                                        Tag="tachographdigital">

                                        <RadioButton.ToolTip>
                                            <ToolTip Content="RECIPES" Style="{StaticResource tt_style}" />
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    <!--  ALARM  -->
                                    <RadioButton
                                        x:Name="btnAlarm"
                                        Margin="0,2,30,2"
                                        Content="ALARM"
                                        GroupName="btnPanel"
                                        Style="{StaticResource controlButtonPanel}"
                                        Tag="clock">

                                        <RadioButton.ToolTip>
                                            <ToolTip Content="ALARM" Style="{StaticResource tt_style}" />
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    <!--  MATERIAL  -->
                                    <RadioButton
                                        x:Name="btnMaterial"
                                        Margin="0,2,30,2"
                                        Content="MATERIAL"
                                        GroupName="btnPanel"
                                        Style="{StaticResource controlButtonPanel}"
                                        Tag="Maxcdn">
                                        <RadioButton.ToolTip>
                                            <ToolTip Content="MATERIAL" Style="{StaticResource tt_style}" />
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    <!--  Config  -->
                                    <RadioButton
                                        x:Name="btnConfig"
                                        Margin="0,2,30,2"
                                        Content="Config"
                                        GroupName="btnPanel"
                                        Style="{StaticResource controlButtonPanel}"
                                        Tag="Gears">

                                        <RadioButton.ToolTip>
                                            <ToolTip
                                                x:Name="ttConfig"
                                                Content="Config"
                                                Style="{StaticResource tt_style}" />
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    <!--<RadioButton x:Name="btnData"
                            Margin="0,10,0,0"
                            Content="Data"
                            GroupName="btnPanel"
                            Style="{StaticResource controlButtonPanel}"
                            Tag="Database">

                            <RadioButton.ToolTip>
                            <ToolTip x:Name="ttData"
                            Content="Data"
                            Style="{StaticResource tt_style}" />
                            </RadioButton.ToolTip>
                            </RadioButton>-->
                                    <RadioButton
                                        x:Name="btnMonitor"
                                        Margin="0,2,30,2"
                                        Content="Monitor"
                                        GroupName="btnPanel"
                                        Style="{StaticResource controlButtonPanel}"
                                        Tag="book">

                                        <RadioButton.ToolTip>
                                            <ToolTip
                                                x:Name="ttMonitor"
                                                Content="Monitor"
                                                Style="{StaticResource tt_style}" />
                                        </RadioButton.ToolTip>
                                    </RadioButton>

                                </StackPanel>
                            </Grid>

                        </Grid>
                    </Border>

                    <Border Margin="0,0,0,10">
                        <Grid Background="AliceBlue">
                            <Grid.RowDefinitions>
                                <!--<RowDefinition Height="77*" />
 <RowDefinition Height="15*" />
 <RowDefinition Height="19*" />-->
                            </Grid.RowDefinitions>
                            <ContentControl
                                x:Name="maincontent"
                                Grid.RowSpan="3"
                                Content="{Binding Currentview}" />
                        </Grid>
                    </Border>


                    <!--  Navigation Panel  -->




                </Grid>

            </Grid>

            <!--  =========================================  -->
            <Grid Grid.Row="2" Background="AliceBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#FF7FA6EF" />

                <Grid Grid.Row="1" Margin="0,2,0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="200" />

                    </Grid.ColumnDefinitions>
                    <Grid x:Name="grdCpu" Grid.Column="0" />

                    <TextBlock
                        x:Name="txtMemoryUsage"
                        Grid.Column="1"
                        Height="40"
                        Margin="10,20,393,-7"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="Memory Usage: Calculating..." />



                    <Border
                        x:Name="bdrPlcConnect"
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Background="IndianRed"
                        BorderBrush="Gray"
                        CornerRadius="5">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="5"
                                ShadowDepth="2"
                                Color="Black" />
                        </Border.Effect>
                        <TextBlock
                            x:Name="txtPlcConnect"
                            Margin="5,0,5,0"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="PLC Disconnected" />
                    </Border>
                    <Border
                        x:Name="bdrCimConnect"
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Background="IndianRed"
                        BorderBrush="Gray"
                        CornerRadius="5">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="5"
                                ShadowDepth="2"
                                Color="Black" />
                        </Border.Effect>
                        <TextBlock
                            x:Name="txtCimConnect"
                            Margin="5,0,5,0"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="HOST Disconnected" />
                    </Border>


                </Grid>


            </Grid>
        </Grid>
    </Border>
</Window>
