<Window
    x:Class="ASOFTCIM.MVVM.Views.Popup.WaittingDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ASOFTCIM.MVVM.ViewModels"
    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.Views.Popup"
    xmlns:vm="clr-namespace:ASOFTCIM.MVVM.ViewModels"
    Title="WaittingDisplay"
    Width="200"
    Height="200"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Window.Resources>
        <vm:WaittingDisplayViewModel x:Key="WaittingDisplayViewModel" />
    </Window.Resources>

    <Grid>
        <!--  Vòng tròn Progress  -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">


            <Grid>
                <ed:Arc
                    x:Name="ARC1"
                    Width="200"
                    Height="200"
                    ArcThickness="10"
                    ArcThicknessUnit="Pixel"
                    EndAngle="{Binding Progress}"
                    Stretch="None">
                    <ed:Arc.Fill>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Offset="2" Color="#FF16A8D8" />
                            <GradientStop Color="Orange" />
                            <GradientStop Offset="2.5" Color="#FF127EA1" />
                        </LinearGradientBrush>
                    </ed:Arc.Fill>
                    <ed:Arc.RenderTransform>
                        <RotateTransform x:Name="RotateTransform" />
                    </ed:Arc.RenderTransform>
                </ed:Arc>

            </Grid>
            <!--  Chữ A  -->
            <TextBlock
                Margin="0,-60,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="200"
                FontWeight="Bold"
                Foreground="Teal"
                Text="A" />
        </Grid>
        <!--  Hiệu ứng Beat  -->
        <!--<Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <DoubleAnimation
                            Storyboard.TargetName="RotateTransform"
                            Storyboard.TargetProperty="EndAngle"
                            From="0" To="360"
                            Duration="0:0:2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>-->
    </Grid>
</Window>
