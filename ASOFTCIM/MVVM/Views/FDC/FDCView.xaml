<UserControl
    x:Class="ASOFTCIM.MVVM.Views.FDC.FDCView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.Views.FDC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ASOFTCIM.MVVM.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:FDCViewModel />
    </UserControl.DataContext>

    <Grid>
        <Border Background="Transparent" CornerRadius="5">

            <Grid ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Margin="10,5,10,5"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="0.5"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            ShadowDepth="2"
                            Color="Black" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.ColumnSpan="2"
                                Margin="2"
                                VerticalAlignment="Center"
                                BorderBrush="#FF7FA6EF"
                                BorderThickness="1"
                                CornerRadius="5">

                                <Border
                                    Margin="0,2,0,2"
                                    VerticalAlignment="Center"
                                    Background="White"
                                    CornerRadius="5">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        FontSize="25"
                                        FontWeight="DemiBold"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="FDC Parameter" />
                                </Border>

                            </Border>
                            <Grid Grid.Row="1" Margin="2,0,2,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="50" />
                                </Grid.RowDefinitions>
                                <Grid.Resources>
                                    <Style x:Key="DarkHeaderStyle" TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#FF333333" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="Padding" Value="5" />
                                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                                        <Setter Property="BorderBrush" Value="Gray" />
                                        <Setter Property="Height" Value="50" />
                                    </Style>

                                    <Style x:Key="ValueCellStyle" TargetType="DataGridCell">
                                        <Setter Property="Background" Value="#FFE0E0E0" />
                                        <Setter Property="Foreground" Value="Black" />
                                        <Setter Property="Height" Value="30" />
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                    </Style>
                                    <Style x:Key="CellStyle" TargetType="DataGridCell">
                                        <Setter Property="Height" Value="30" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                    </Style>
                                </Grid.Resources>

                                <DataGrid
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    AutoGenerateColumns="False"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CanUserAddRows="False"
                                    ColumnHeaderStyle="{StaticResource DarkHeaderStyle}"
                                    GridLinesVisibility="Horizontal"
                                    HeadersVisibility="Column"
                                    HorizontalGridLinesBrush="#FFCCCCCC"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding FDCModel.CurrentSVIDsL}"
                                    SelectionUnit="Cell"
                                    VerticalGridLinesBrush="#FFCCCCCC">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="*"
                                            Binding="{Binding SVID}"
                                            CellStyle="{StaticResource CellStyle}"
                                            Header="SVID" />
                                        <DataGridTextColumn
                                            Width="3*"
                                            Binding="{Binding SVNAME}"
                                            Header="NAME" />
                                        <DataGridTextColumn
                                            Width="2*"
                                            Binding="{Binding SVVALUE}"
                                            CellStyle="{StaticResource CellStyle}"
                                            Header="VALUE" />
                                        <DataGridTextColumn
                                            Width="*"
                                            CellStyle="{StaticResource CellStyle}"
                                            Header="TYPE" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <DataGrid
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    AutoGenerateColumns="False"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CanUserAddRows="False"
                                    ColumnHeaderStyle="{StaticResource DarkHeaderStyle}"
                                    GridLinesVisibility="Horizontal"
                                    HeadersVisibility="Column"
                                    HorizontalGridLinesBrush="#FFCCCCCC"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding FDCModel.CurrentSVIDsR}"
                                    SelectionUnit="Cell"
                                    VerticalGridLinesBrush="#FFCCCCCC">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="*"
                                            Binding="{Binding SVID}"
                                            CellStyle="{StaticResource CellStyle}"
                                            Header="SVID" />
                                        <DataGridTextColumn
                                            Width="3*"
                                            Binding="{Binding SVNAME}"
                                            Header="NAME" />
                                        <DataGridTextColumn
                                            Width="2*"
                                            Binding="{Binding SVVALUE}"
                                            CellStyle="{StaticResource CellStyle}"
                                            Header="VALUE" />
                                        <DataGridTextColumn
                                            Width="*"
                                            CellStyle="{StaticResource CellStyle}"
                                            Header="TYPE" />
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Button
                                    Name="btnBack"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Command="{Binding BackCommand}"
                                    Content="BACK"
                                    FontSize="5"
                                    Style="{StaticResource ButtonControl}" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Command="{Binding NextCommand}"
                                    Content="NEXT"
                                    FontSize="5"
                                    Style="{StaticResource ButtonControl}" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
