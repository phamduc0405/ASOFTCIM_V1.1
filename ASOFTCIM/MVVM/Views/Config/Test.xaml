<UserControl
    x:Class="ASOFTCIM.MVVM.Views.Config.Test"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.Views.Config"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="btnTest" Content="TestPLC2CIM_SEND" />
        <TextBox x:Name="txtNameClass" Grid.Column="1" />
        <TextBox x:Name="txtNameObj" Grid.Column="2" />
        <TextBox x:Name="txtS6F1" Grid.Column="2" />
        <TextBox x:Name="txt" Grid.Column="2" />
        <Grid
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,5,0,5"
                FontSize="15"
                Style="{StaticResource HeaderTextBlockStyle}"
                Text="trid" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,5,0,5"
                FontSize="15"
                Style="{StaticResource HeaderTextBlockStyle}"
                Text="Dsper" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="10,5,0,5"
                FontSize="15"
                Style="{StaticResource HeaderTextBlockStyle}"
                Text="totsmp" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Margin="10,5,0,5"
                FontSize="15"
                Style="{StaticResource HeaderTextBlockStyle}"
                Text="repgsz" />
            <!--  ============================================================  -->
            <TextBox
                x:Name="txtTrid"
                Grid.Row="0"
                Grid.Column="1"
                Margin="10,5,0,5"
                FontSize="15"
                Style="{StaticResource TextBoxMultiLine}"
                Text="trid" />
            <TextBox
                x:Name="txtDsper"
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,5,0,5"
                FontSize="15"
                Style="{StaticResource TextBoxMultiLine}"
                Text="Dsper" />
            <TextBox
                x:Name="txtTotsmp"
                Grid.Row="2"
                Grid.Column="1"
                Margin="10,5,0,5"
                FontSize="15"
                Style="{StaticResource TextBoxMultiLine}"
                Text="totsmp" />
            <TextBox
                x:Name="txtRepgsz"
                Grid.Row="3"
                Grid.Column="1"
                Margin="10,5,0,5"
                FontSize="15"
                Style="{StaticResource TextBoxMultiLine}"
                Text="repgsz" />

        </Grid>
        <!--  =  -->
        <Button
            x:Name="btnS2F17"
            Grid.Row="1"
            Grid.Column="0"
            Content="SendS2F17" />
        <!--  =  -->
        <Button
            x:Name="btnS1F1"
            Grid.Row="2"
            Grid.Column="0"
            Content="SendS1F1" />
        <Button
            x:Name="btnS6F1Start"
            Grid.Row="3"
            Grid.Column="0"
            Content="SendS6F1_Start" />
        <Button
            x:Name="btnS6F1Stop"
            Grid.Row="4"
            Grid.Column="0"
            Content="SendS6F1_Stop" />

    </Grid>
</UserControl>
