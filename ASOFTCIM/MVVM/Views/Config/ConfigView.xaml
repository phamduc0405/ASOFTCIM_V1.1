<UserControl
    x:Class="ASOFTCIM.MVVM.Views.Config.ConfigView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.Views.Config"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ASOFTCIM.MVVM.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="tglogFDC">
            <BeginStoryboard>
                <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="grlogFDC" Storyboard.TargetProperty="Visibility">
                        <DiscreteObjectKeyFrame KeyTime="0:0:0">
                            <DiscreteObjectKeyFrame.Value>
                                <Visibility>Visible</Visibility>
                            </DiscreteObjectKeyFrame.Value>
                        </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>

                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="ToggleButton.Unchecked" SourceName="tglogFDC">
            <BeginStoryboard>
                <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="grlogFDC" Storyboard.TargetProperty="Visibility">
                        <DiscreteObjectKeyFrame KeyTime="0:0:0">
                            <DiscreteObjectKeyFrame.Value>
                                <Visibility>Collapsed</Visibility>
                            </DiscreteObjectKeyFrame.Value>
                        </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>

                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    <UserControl.DataContext>
        <vm:ConfigViewModel />
    </UserControl.DataContext>
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <Border
                    Margin="0,3,0,3"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="0.5"
                    CornerRadius="3">
                    <DockPanel LastChildFill="True">
                        <!--  =============        PLC CONFIG        ===============  -->
                        <Border
                            Margin="3"
                            Background="#FF7FA6EF"
                            CornerRadius="3"
                            DockPanel.Dock="Top">
                            <TextBlock
                                Grid.Column="0"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                Foreground="Black"
                                Style="{StaticResource HeaderTextBlockStyle}"
                                Text="PLC CONFIG" />
                        </Border>
                        <Border
                            Margin="3"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="3"
                            DockPanel.Dock="Top">
                            <StackPanel Orientation="Vertical">
                                <!--  ============================  -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="USE CC-LINK IE : " />
                                    <ToggleButton
                                        x:Name="tglPlcUseCCLinkIe"
                                        HorizontalAlignment="Right"
                                        Background="LawnGreen"
                                        IsChecked="{Binding Configs.UserCCLinkIE}"
                                        Style="{StaticResource ToggleFlipFlop}"
                                        Tag="GreenYellow" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="PLC Connect Type : " />
                                    <ComboBox
                                        x:Name="cbbplcConnectType"
                                        ItemsSource="{Binding Configs.PlcConnectTypes}"
                                        SelectedItem="{Binding Configs.PlcConnectType}"
                                        Style="{StaticResource ComboBoxFlatStyle}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="PLC IP : " />
                                    <Grid
                                        x:Name="grdPLCIP"
                                        Width="150"
                                        Height="20" />

                                    <TextBlock
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="PLC PORT : " />

                                    <TextBox
                                        x:Name="txtPLCPort"
                                        Width="50"
                                        Height="20"
                                        Margin="5,5,5,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Text="" />
                                    <TextBlock
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="PC IP : " />
                                    <Grid
                                        x:Name="grdPCIP"
                                        Width="150"
                                        Height="20" />
                                </StackPanel>
                                <DockPanel LastChildFill="True">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="PLC STATION  : " />

                                    <TextBox
                                        x:Name="txtPLCStation"
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Tag="Folder"
                                        Text="{Binding Configs.PlcStation}" />
                                </DockPanel>
                                <StackPanel x:Name="stkCCLinkIe">
                                    <DockPanel LastChildFill="True">
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Left"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="PLC PATH  : " />

                                        <TextBox
                                            x:Name="txtPLCPath"
                                            Margin="10,5,10,5"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Left"
                                            Style="{StaticResource TextBoxStandard}"
                                            Tag="Folder"
                                            Text="{Binding Configs.plcPath}" />
                                    </DockPanel>
                                    <DockPanel LastChildFill="True">
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Left"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="PLC NETWORK  : " />

                                        <TextBox
                                            x:Name="txtPLCNetWork"
                                            Margin="10,5,10,5"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Left"
                                            Style="{StaticResource TextBoxStandard}"
                                            Tag="Folder"
                                            Text="{Binding Configs.PlcNetWork}" />
                                    </DockPanel>
                                    <DockPanel LastChildFill="True">
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Left"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="PLC CHANNEL  : " />

                                        <TextBox
                                            x:Name="txtPLCChannel"
                                            Margin="10,5,10,5"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Left"
                                            Style="{StaticResource TextBoxStandard}"
                                            Tag="Folder"
                                            Text="{Binding Configs.PlcChannel}" />
                                    </DockPanel>
                                </StackPanel>

                                <DockPanel LastChildFill="True">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="TIME ALIVE  : " />

                                    <TextBox
                                        x:Name="txtPlcAlive"
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Tag="Folder"
                                        Text="{Binding Configs.PlcTimeAlive}" />
                                </DockPanel>
                                <DockPanel LastChildFill="True">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="START INPUT BIT : " />

                                    <TextBox
                                        x:Name="txtPLCStartInBAdd"
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Tag="0"
                                        Text="{Binding Configs.PlcStartInputBit}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="LENGTH : " />

                                    <TextBox
                                        x:Name="txtPLCLengthInB"
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Tag="4096"
                                        Text="{Binding Configs.PlcStartInputBitLength}" />
                                </DockPanel>
                                <DockPanel LastChildFill="True">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="START INPUT WORD : " />

                                    <TextBox
                                        x:Name="txtPLCStartInWAdd"
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Tag="0"
                                        Text="{Binding Configs.PlcStartInputWord}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="LENGTH : " />

                                    <TextBox
                                        x:Name="txtPLCLengthInW"
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Tag="4096"
                                        Text="{Binding Configs.PlcStartInputWordLength}" />
                                </DockPanel>
                                <DockPanel LastChildFill="True">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="START OUTPUT BIT : " />

                                    <TextBox
                                        x:Name="txtPLCStartOutB"
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Tag="0"
                                        Text="{Binding Configs.PlcStartOutputBit}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="LENGTH : " />

                                    <TextBox
                                        x:Name="txtPLCLengthOutB"
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Tag="4096"
                                        Text="{Binding Configs.PlcStartOutputBitLength}" />
                                </DockPanel>
                                <DockPanel LastChildFill="True">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="START OUTPUT WORD : " />

                                    <TextBox
                                        x:Name="txtPLCStartOutW"
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Tag="0"
                                        Text="{Binding Configs.PlcStartOutputWord}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="LENGTH : " />

                                    <TextBox
                                        x:Name="txtPLCLengthOutW"
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource TextBoxStandard}"
                                        Tag="4096"
                                        Text="{Binding Configs.PlcStartOutputWordLength}" />
                                </DockPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="PLC Device Map : " />
                                    <DockPanel Grid.Column="1" LastChildFill="True">
                                        <Button
                                            x:Name="btnDirPLCExcel"
                                            Width="35"
                                            Height="35"
                                            Margin="5,0,10,0"
                                            HorizontalAlignment="Left"
                                            Command="{Binding btnDirPLCExcel}"
                                            Content=". . ."
                                            DockPanel.Dock="Right"
                                            Style="{StaticResource ButtonCircle}" />
                                        <TextBox
                                            x:Name="txtPathPlcExcel"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Stretch"
                                            Style="{StaticResource TextBoxStandard}"
                                            Tag="Folder"
                                            Text="{Binding Configs.PathMapInterface}" />
                                    </DockPanel>


                                </Grid>

                                <Button
                                    x:Name="btnSavePlcConfig"
                                    Width="200"
                                    Height="50"
                                    Margin="50,20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Command="{Binding btnSavePLCConfig}"
                                    Style="{StaticResource ButtonSave}">
                                    <StackPanel Width="200" Orientation="Horizontal">
                                        <fa:IconImage
                                            x:Name="LoadingPlcImage"
                                            Width="25"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            fa:Awesome.Spin="true"
                                            Icon="Spinner"
                                            Visibility="Hidden" />
                                        <TextBlock
                                            Height="30"
                                            Margin="40,10,5,0"
                                            HorizontalAlignment="Center"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="Save" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                        <!--  =============        EQUIPMENT CONFIG        ===============  -->


                    </DockPanel>
                </Border>
            </ScrollViewer>
            <!--  =============        EQP CONFIG        ===============  -->
            <ScrollViewer Grid.Column="1">
                <Border Grid.Column="1">
                    <StackPanel>
                        <Border
                            Margin="3"
                            Background="#FF7FA6EF"
                            CornerRadius="3"
                            DockPanel.Dock="Top">
                            <TextBlock
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                Foreground="Black"
                                Style="{StaticResource HeaderTextBlockStyle}"
                                Text="EQUIPMENT CONFIG" />
                        </Border>
                        <Border
                            Margin="3"
                            Padding="5"
                            BorderBrush="Black"
                            BorderThickness="0.5"
                            CornerRadius="3">
                            <StackPanel Grid.Row="1" Orientation="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="EQUIPMENT ID : " />
                                    <TextBox
                                        x:Name="txtEqpId"
                                        Grid.Column="1"
                                        Margin="10,10,10,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        Style="{StaticResource TextBoxStandard}"
                                        Text="{Binding Configs.EquipMent}" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="LOG FOLDER  : " />
                                    <DockPanel Grid.Column="1">
                                        <Button
                                            x:Name="btnDirLog"
                                            Width="35"
                                            Height="35"
                                            Margin="0,0,10,0"
                                            HorizontalAlignment="Left"
                                            Command="{Binding btnDirLog}"
                                            Content=". . ."
                                            DockPanel.Dock="Right"
                                            Style="{StaticResource ButtonCircle}" />
                                        <TextBox
                                            x:Name="txtLogFoldler"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Stretch"
                                            Style="{StaticResource TextBoxStandard}"
                                            Tag="Folder"
                                            Text="{Binding Configs.LogFolder}" />
                                    </DockPanel>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.7*" />
                                        <ColumnDefinition Width="2.5*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="Size File :" />
                                    <DockPanel Grid.Column="1" />
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Right"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="MB" />
                                        <TextBox
                                            Margin="15,0,0,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Stretch"
                                            Style="{StaticResource TextBoxStandard}"
                                            Tag="10"
                                            Text="{Binding Configs.SizeFile}" />
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="AUTO DELETE THE LOG AFTER  : " />
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Right"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="(Days)" />
                                        <TextBox
                                            x:Name="txtTimeDelLog"
                                            Grid.Column="0"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Stretch"
                                            Style="{StaticResource TextBoxStandard}"
                                            Tag="30"
                                            Text="{Binding Configs.AutoDeleteLog}" />
                                    </Grid>

                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="AliveTime " />
                                    <TextBox
                                        x:Name="txtAliveTime"
                                        Grid.Column="1"
                                        Margin="10,10,10,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        Style="{StaticResource TextBoxStandard}"
                                        Text="{Binding Configs.AliveTime}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="USE LOG PLC " />
                                    <ToggleButton
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        Background="LawnGreen"
                                        IsChecked="{Binding Configs.UseLogPLC}"
                                        Style="{StaticResource ToggleFlipFlop}"
                                        Tag="GreenYellow" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="USE LOG FDC " />
                                    <ToggleButton
                                        x:Name="tglogFDC"
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        Background="LawnGreen"
                                        IsChecked="{Binding Configs.UseLogFDC}"
                                        Style="{StaticResource ToggleFlipFlop}"
                                        Tag="GreenYellow" />
                                </Grid>

                                <Grid x:Name="grlogFDC">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="LOG FOLDER FDC  : " />
                                    <DockPanel Grid.Column="1">
                                        <Button
                                            x:Name="btnDirLogFDC"
                                            Width="35"
                                            Height="35"
                                            Margin="0,0,10,0"
                                            HorizontalAlignment="Left"
                                            Command="{Binding btnDirLogFDC}"
                                            Content=". . ."
                                            DockPanel.Dock="Right"
                                            Style="{StaticResource ButtonCircle}" />
                                        <TextBox
                                            x:Name="txtPathLogFDC"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Stretch"
                                            Style="{StaticResource TextBoxStandard}"
                                            Tag="Folder"
                                            Text="{Binding Configs.LogFodlerFDC}" />
                                    </DockPanel>

                                </Grid>

                                <Button
                                    x:Name="btnSaveEqpConfig"
                                    Width="200"
                                    Height="50"
                                    Margin="50,20"
                                    HorizontalAlignment="Center"
                                    Command="{Binding btnSaveEQPConfig}"
                                    Style="{StaticResource ButtonSave}">
                                    <StackPanel Width="200" Orientation="Horizontal">
                                        <fa:IconImage
                                            x:Name="LoadingEqpImage"
                                            Width="25"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            fa:Awesome.Spin="true"
                                            Icon="Spinner"
                                            Visibility="Hidden" />
                                        <TextBlock
                                            Height="30"
                                            Margin="40,10,5,0"
                                            HorizontalAlignment="Center"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="Save" />

                                    </StackPanel>

                                </Button>


                            </StackPanel>

                        </Border>
                        <Border
                            Margin="3"
                            Background="#FF7FA6EF"
                            CornerRadius="3"
                            DockPanel.Dock="Top">
                            <TextBlock
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                Foreground="Black"
                                Style="{StaticResource HeaderTextBlockStyle}"
                                Text="CIM CONFIG" />
                        </Border>
                        <Border
                            Margin="3"
                            Padding="5"
                            BorderBrush="Black"
                            BorderThickness="0.5"
                            CornerRadius="3">
                            <StackPanel Grid.Row="1" Orientation="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="IP :" />
                                    <TextBox
                                        x:Name="txtIp"
                                        Grid.Column="1"
                                        Margin="10,10,10,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        Style="{StaticResource TextBoxStandard}"
                                        Text="{Binding Configs.Ip}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="ConectMode :" />
                                    <TextBox
                                        x:Name="txtConectMode"
                                        Grid.Column="1"
                                        Margin="10,10,10,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        Style="{StaticResource TextBoxStandard}"
                                        Text="{Binding Configs.ConnectMode}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="Port:" />
                                    <TextBox
                                        x:Name="txtPort"
                                        Grid.Column="1"
                                        Margin="10,10,10,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        Style="{StaticResource TextBoxStandard}"
                                        Text="{Binding Configs.Port}" />
                                </Grid>

                                <Button
                                    x:Name="btnSaveCimConfig"
                                    Width="200"
                                    Height="50"
                                    Margin="50,20"
                                    HorizontalAlignment="Center"
                                    Command="{Binding btnSaveCimConfig}"
                                    Style="{StaticResource ButtonSave}">
                                    <StackPanel Width="200" Orientation="Horizontal">
                                        <fa:IconImage
                                            x:Name="LoadingCimImage"
                                            Width="25"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            fa:Awesome.Spin="true"
                                            Icon="Spinner"
                                            Visibility="Hidden" />
                                        <TextBlock
                                            Height="30"
                                            Margin="40,10,5,0"
                                            HorizontalAlignment="Center"
                                            Style="{StaticResource HeaderTextBlockStyle}"
                                            Text="Save" />

                                    </StackPanel>

                                </Button>


                            </StackPanel>

                        </Border>
                    </StackPanel>
                </Border>
            </ScrollViewer>



        </Grid>
    </Border>
</UserControl>
