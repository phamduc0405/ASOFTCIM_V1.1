<UserControl
    x:Class="ASOFTCIM.MVVM.Views.Alarm.AlarmView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ASOFTCIM.MVVM.Views.Alarm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ASOFTCIM.MVVM.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  Tạo style cho ListView  -->
        <Style x:Key="CustoListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="LightGreen" />
            <Setter Property="BorderBrush" Value="DarkGreen" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="8" />
        </Style>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="White" />
            <!--  Màu nền  -->
            <Setter Property="Foreground" Value="#FF2D2D30" />
            <!--  Màu chữ  -->
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>
        <!--  Tạo style cho ListViewItem  -->
        <Style x:Key="CustomListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="LightYellow" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="4" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightSkyBlue" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DarkHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="CornflowerBlue" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />

            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="BorderBrush" Value="Gray" />
        </Style>

        <Style x:Key="ValueCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFE0E0E0" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:AlarmViewModel />
    </UserControl.DataContext>
    <Grid>
        <Border Background="Transparent" CornerRadius="5">

            <Grid ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Margin="10,5,10,5"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="0.5"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            ShadowDepth="2"
                            Color="Black" />
                    </Border.Effect>
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.ColumnSpan="2"
                                Margin="2"
                                VerticalAlignment="Center"
                                BorderBrush="#FF7FA6EF"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Border
                                    Margin="0,2,0,2"
                                    VerticalAlignment="Center"
                                    Background="White"
                                    CornerRadius="5">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        FontSize="25"
                                        FontWeight="DemiBold"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="ALARM" />
                                </Border>
                            </Border>
                            <!--<ListView
                             x:Name="lstErr"
                             Grid.Row="1"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             Background="#D6DAF3"
                             BorderBrush="#D7D3CB"
                             BorderThickness="2"
                             FontWeight="Light"
                             Foreground="Black"
                             ItemsSource="{Binding AlarmList}">
                             <ListView.View>
                                 <GridView>
                                     <GridViewColumn Width="100" Header="TIME">
                                         <GridViewColumn.CellTemplate>
                                             <DataTemplate>
                                                 <TextBlock
                                                     Margin="15,0,0,0"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Text="{Binding TIME}" />
                                             </DataTemplate>
                                         </GridViewColumn.CellTemplate>
                                     </GridViewColumn>
                                     <GridViewColumn Width="100" Header="EQPID">
                                         <GridViewColumn.CellTemplate>
                                             <DataTemplate>
                                                 <TextBlock
                                                     Margin="20,0,0,0"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Text="{Binding EQPID}" />
                                             </DataTemplate>
                                         </GridViewColumn.CellTemplate>
                                     </GridViewColumn>
                                     <GridViewColumn Width="800" Header="ALTEXT">
                                         <GridViewColumn.CellTemplate>
                                             <DataTemplate>
                                                 <TextBlock
                                                     Margin="20,0,0,0"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Text="{Binding ALTEXT}" />
                                             </DataTemplate>
                                         </GridViewColumn.CellTemplate>
                                     </GridViewColumn>
                                     <GridViewColumn Width="100" Header="ALST">
                                         <GridViewColumn.CellTemplate>
                                             <DataTemplate>
                                                 <TextBlock
                                                     Margin="35,0,0,0"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Text="{Binding ALST}" />
                                             </DataTemplate>
                                         </GridViewColumn.CellTemplate>
                                     </GridViewColumn>
                                     <GridViewColumn Width="100" Header="ALID">
                                         <GridViewColumn.CellTemplate>
                                             <DataTemplate>
                                                 <TextBlock
                                                     Margin="35,0,0,0"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Text="{Binding ALID}" />
                                             </DataTemplate>
                                         </GridViewColumn.CellTemplate>
                                     </GridViewColumn>
                                     <GridViewColumn Width="100" Header="ALCD">
                                         <GridViewColumn.CellTemplate>
                                             <DataTemplate>
                                                 <TextBlock
                                                     Margin="35,0,0,0"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Text="{Binding ALCD}" />
                                             </DataTemplate>
                                         </GridViewColumn.CellTemplate>
                                     </GridViewColumn>
                                 </GridView>
                             </ListView.View>
                             <ListView.ItemContainerStyle>
                                 <Style TargetType="ListViewItem">
                                     <Style.Triggers>
                                         <DataTrigger Binding="{Binding ALST}" Value="1">
                                             <Setter Property="FontWeight" Value="Bold" />
                                         </DataTrigger>
                                     </Style.Triggers>
                                 </Style>
                             </ListView.ItemContainerStyle>
                         </ListView>-->
                            <DataGrid
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="5,0,5,5"
                                AutoGenerateColumns="False"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CanUserAddRows="False"
                                ColumnHeaderStyle="{StaticResource DarkHeaderStyle}"
                                GridLinesVisibility="Horizontal"
                                HeadersVisibility="Column"
                                HorizontalGridLinesBrush="#FFCCCCCC"
                                IsReadOnly="True"
                                ItemsSource="{Binding AlarmView.AlarmList}"
                                SelectionUnit="Cell"
                                VerticalGridLinesBrush="#FFCCCCCC">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="150"
                                        Binding="{Binding TIME}"
                                        Header="TIME" />
                                    <DataGridTextColumn
                                        Width="100"
                                        Binding="{Binding EQPID}"
                                        Header="EQPID" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding ALTEXT}"
                                        CellStyle="{StaticResource ValueCellStyle}"
                                        Header="ALTEXT" />
                                    <DataGridTextColumn
                                        Width="SizeToHeader"
                                        Binding="{Binding ALST}"
                                        Header="ALST" />
                                    <DataGridTextColumn
                                        Width="SizeToHeader"
                                        Binding="{Binding ALID}"
                                        Header="ALID" />
                                    <DataGridTextColumn
                                        Width="SizeToHeader"
                                        Binding="{Binding ALCD}"
                                        Header="ALCD" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
